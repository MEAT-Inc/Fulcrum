<UserControl x:Class="FulcrumInjector.FulcrumViewContent.Views.FulcrumVehicleConnectionInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FulcrumInjector.FulcrumViewContent.Views"
             xmlns:injectorViewModels="clr-namespace:FulcrumInjector.FulcrumViewContent.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="FulcrumVehicleConnectionInfoView_OnLoaded">

    <!-- DataContext Binding -->
    <UserControl.DataContext>
        <injectorViewModels:FulcrumVehicleConnectionInfoViewModel/>
    </UserControl.DataContext>

    <!-- Style Sheets -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../FulcrumViewSupport/AppStyleSheets/FulcrumControlStyles.xaml"/>
                <ResourceDictionary Source="../../FulcrumViewSupport/AppStyleSheets/FulcrumVehicleConnectionInfoStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- Content For Vehicle Connection -->
    <Grid Background="{StaticResource PrimaryColor_Darker_65}">
        <Border BorderBrush="{StaticResource SecondaryColor_Lighter_35}" BorderThickness="3" CornerRadius="2"/>
        <TextBlock Text="Inside this spac will be the Vehicle Connection Information View.  This will contain constant voltage readings and a VIN Number for our connected vehicle if one can be found. This app will try to use a CDP3 as our default device type. Choose a different DLL in the hardware explorer view to set which DLL Type to use."
                   FontSize="14" Margin="20,0" FontWeight="DemiBold" VerticalAlignment="Center"
                   HorizontalAlignment="Center" Foreground="Yellow" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
