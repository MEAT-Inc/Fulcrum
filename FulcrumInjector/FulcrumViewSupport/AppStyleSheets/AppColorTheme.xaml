<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="FulcrumInjector.FulcrumViewSupport.AppStyleSheets.AppColorTheme">
    <!--Main color for whole theme here-->
    <SolidColorBrush x:Key="PrimaryColor" Color="White"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="White"/>
    <SolidColorBrush x:Key="TextColorBase" Color="White"/>

    <!--Variations of the main color scheme-->
    <SolidColorBrush x:Key="PrimaryColor_Darker_35"  Color="White"/>
    <SolidColorBrush x:Key="PrimaryColor_Lighter_35" Color="White"/>
    <SolidColorBrush x:Key="PrimaryColor_Darker_65"  Color="White"/>
    <SolidColorBrush x:Key="PrimaryColor_Lighter_65" Color="White"/>

    <!--Variations of the secondary color scheme-->
    <SolidColorBrush x:Key="SecondaryColor_Darker_35"  Color="White"/>
    <SolidColorBrush x:Key="SecondaryColor_Lighter_35" Color="White"/>
    <SolidColorBrush x:Key="SecondaryColor_Lighter_65" Color="White"/>
    <SolidColorBrush x:Key="SecondaryColor_Darker_65"  Color="White"/>

    <!--Custom grey color used in a lot of places-->
    <SolidColorBrush x:Key="DarkGreyThemeColor" Color="#FF878787"/>
</ResourceDictionary>