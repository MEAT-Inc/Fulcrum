                    </Path.Data>
                </Path>
                <Button.LayoutTransform>
                    <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                </Button.LayoutTransform>
            </Button>

            <!-- Debug And Help -->
            <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                    Style="{StaticResource ActionButtonStyleTransparent}" 
                    Width="26" Margin="5" Grid.Column="1" Click="BugFeedbackButton_Click">
                <Path Fill="{StaticResource TextColorBase}" Margin="-3,0">
                    <Path.Data>
