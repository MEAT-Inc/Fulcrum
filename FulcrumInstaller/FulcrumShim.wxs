                  <File Id="NLOG.DLL" Name="NLog.dll" Source="..\FulcrumInjector\bin\Debug\NLog.dll" />
                  <File Id="NLOG.XML" Name="NLog.xml" Source="..\FulcrumInjector\bin\Debug\NLog.xml" />
