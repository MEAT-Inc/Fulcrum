<mah:MetroWindow x:Class="FulcrumInjector.InjectorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FulcrumInjector"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:views="clr-namespace:FulcrumInjector.ViewControl.Views"
        mc:Ignorable="d"
        Title="Fulcrum Injector" 
        Height="600" Width="1000" 
        MaxHeight="650" MaxWidth="1125"
        MinHeight="550" MinWidth="875"
        AllowsTransparency="True"
        Loaded="InjectorMainWindow_OnLoaded">
    
    <!-- Dark Semi Transparent Background -->
    <Window.Background>
        <SolidColorBrush Color="#020202" Opacity=".85"/>
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary Source="AppStyles/AppStyleSheets/CommonControlStyles.xaml"/>
    </Window.Resources>

    <Grid Margin="0">
        <!-- Row Layout for content -->
        <Grid.RowDefinitions>
            <RowDefinition Height=".15*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Top border and the title information for this app -->
        <Border Grid.Row="0" Grid.RowSpan="2" BorderBrush="{StaticResource TextColorBase}" Style="{StaticResource TransparentBackgroundBorder}"/>
        <Grid Grid.Row="0">
            <views:FulcrumTitleView x:Name="FulcrumTitle"/>
            <Border BorderBrush="White" BorderThickness="0,0,0,2" Margin="5,0"/>
        </Grid>

        <!-- All Other App Content Goes Down Here -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".35*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Splitting Border -->
            <Border Grid.Column="1" Margin="0,0" Opacity=".50" BorderThickness="5,0" BorderBrush="{StaticResource PrimaryColor_Lighter_35}"/>

            <!-- Left Side Pane View -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.25*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                 <Border Grid.Row="0" BorderBrush="White" BorderThickness="0,0,0,2" Margin="5,0"/>
                 <Border Grid.Row="1" BorderBrush="White" BorderThickness="0,0,0,2" Margin="5,0"/>

                 <!-- DLL Loading Test Pane -->
                 <Viewbox Grid.Row="0" Stretch="Fill" Margin="0,5">
                    <views:FulcrumDllInjectionTestView x:Name="FulcrumDllInjectionTest"/>
                </Viewbox>
            </Grid>
        </Grid>

        <!-- Flyouts for Main Window -->
        <mah:FlyoutsControl Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <mah:Flyout
                IsOpen="False"
                x:Name="SettingsViewFlyout" 
                HorizontalContentAlignment="Stretch" 
                BorderThickness="3" BorderBrush="{StaticResource SecondaryColor_Lighter_35}">
                
                <!-- Content for Settings -->

            </mah:Flyout>
            <mah:Flyout
                IsOpen="False" 
                x:Name="DebugViewFlyout"
                HorizontalContentAlignment="Stretch" 
                BorderThickness="3" BorderBrush="{StaticResource SecondaryColor_Lighter_35}">

                <!-- Content for Debugging -->
            </mah:Flyout>

        </mah:FlyoutsControl>
    </Grid>
</mah:MetroWindow>
