                  <File Id="FULCRUMINJECTOR.EXE" Name="FulcrumInjector.exe" Source="..\FulcrumInjector\bin\Debug\FulcrumInjector.exe" />
                  <File Id="FULCRUMINJECTOR.EXE.CONFIG" Name="FulcrumInjector.exe.config" Source="..\FulcrumInjector\bin\Debug\FulcrumInjector.exe.config" />
                  <File Id="FULCRUMINJECTOR.PDB" Name="FulcrumInjector.pdb" Source="..\FulcrumInjector\bin\Debug\FulcrumInjector.pdb" />
                  <File Id="FULCRUMINJECTORSETTINGS.JSON" Name="FulcrumInjectorSettings.json" Source="..\FulcrumInjector\bin\Debug\FulcrumInjectorSettings.json" />
                  <File Id="MAHAPPS.METRO.DLL" Name="MahApps.Metro.dll" Source="..\FulcrumInjector\bin\Debug\MahApps.Metro.dll" />
                  <File Id="MAHAPPS.METRO.ICONPACKS.BOOTSTRAPICONS.DLL" Name="MahApps.Metro.IconPacks.BootstrapIcons.dll" Source="..\FulcrumInjector\bin\Debug\MahApps.Metro.IconPacks.BootstrapIcons.dll" />
                  <File Id="MAHAPPS.METRO.ICONPACKS.BOOTSTRAPICONS.PDB" Name="MahApps.Metro.IconPacks.BootstrapIcons.pdb" Source="..\FulcrumInjector\bin\Debug\MahApps.Metro.IconPacks.BootstrapIcons.pdb" />
                  <File Id="MAHAPPS.METRO.ICONPACKS.BOOTSTRAPICONS.XML" Name="MahApps.Metro.IconPacks.BootstrapIcons.xml" Source="..\FulcrumInjector\bin\Debug\MahApps.Metro.IconPacks.BootstrapIcons.xml" />
                  <File Id="MAHAPPS.METRO.ICONPACKS.CORE.DLL" Name="MahApps.Metro.IconPacks.Core.dll" Source="..\FulcrumInjector\bin\Debug\MahApps.Metro.IconPacks.Core.dll" />
                  <File Id="MAHAPPS.METRO.ICONPACKS.CORE.PDB" Name="MahApps.Metro.IconPacks.Core.pdb" Source="..\FulcrumInjector\bin\Debug\MahApps.Metro.IconPacks.Core.pdb" />
                  <File Id="MAHAPPS.METRO.ICONPACKS.CORE.XML" Name="MahApps.Metro.IconPacks.Core.xml" Source="..\FulcrumInjector\bin\Debug\MahApps.Metro.IconPacks.Core.xml" />
                  <File Id="MAHAPPS.METRO.ICONPACKS.DLL" Name="MahApps.Metro.IconPacks.dll" Source="..\FulcrumInjector\bin\Debug\MahApps.Metro.IconPacks.dll" />
