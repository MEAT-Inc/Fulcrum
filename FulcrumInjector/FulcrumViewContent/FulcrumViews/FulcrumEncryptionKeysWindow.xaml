<mah:MetroWindow x:Class="FulcrumInjector.FulcrumViewContent.FulcrumViews.FulcrumEncryptionKeysWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FulcrumInjector.FulcrumViewContent.FulcrumViews"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d" ResizeMode="NoResize" TitleForeground="White"
        Loaded="FulcrumEncryptionKeysWindow_OnLoaded" ShowCloseButton="False"
        Title="Encryption Key Configuration" Height="450" Width="800">

    <!-- Dark Semi Transparent Background -->
    <Window.Background>
        <SolidColorBrush Color="#212121" Opacity=".75"/>
    </Window.Background>

    <!-- Content for Encryption Key Configuration -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>   
        </Grid.RowDefinitions>

        <!-- Information Content -->
        <Grid Grid.Row="0">
            <TextBlock Text="Encryption Key Configuration" Foreground="White"/>
        </Grid>
    </Grid>

</mah:MetroWindow>
