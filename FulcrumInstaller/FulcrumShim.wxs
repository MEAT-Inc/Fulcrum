                  <File Id="MAHAPPS.METRO.XML" Name="MahApps.Metro.xml" Source="..\FulcrumInjector\bin\Debug\MahApps.Metro.xml" />
                  <File Id="MICROSOFT.XAML.BEHAVIORS.DLL" Name="Microsoft.Xaml.Behaviors.dll" Source="..\FulcrumInjector\bin\Debug\Microsoft.Xaml.Behaviors.dll" />
                  <File Id="MICROSOFT.XAML.BEHAVIORS.PDB" Name="Microsoft.Xaml.Behaviors.pdb" Source="..\FulcrumInjector\bin\Debug\Microsoft.Xaml.Behaviors.pdb" />
                  <File Id="MICROSOFT.XAML.BEHAVIORS.XML" Name="Microsoft.Xaml.Behaviors.xml" Source="..\FulcrumInjector\bin\Debug\Microsoft.Xaml.Behaviors.xml" />
                  <File Id="NEWTONSOFT.JSON.DLL" Name="Newtonsoft.Json.dll" Source="..\FulcrumInjector\bin\Debug\Newtonsoft.Json.dll" />
